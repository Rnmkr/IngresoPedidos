<Window x:Class="IngresoPedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:IngresoPedidos.ViewModels"
        xmlns:helpers="clr-namespace:IngresoPedidos.Helpers"
        mc:Ignorable="d"
        Title="EXO: Ingreso de Pedidos" Height="640" Width="1920" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <viewModels:MainViewModel x:Key="ViewModel" />
    </Window.Resources>


    <Grid DataContext="{Binding Source={StaticResource ViewModel}}">
        <!---->
        
       

        <!---->
        <Label Content="Pedido" Background="{x:Null}" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Height="33" Width="105" Padding="0,0,5,0" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontFamily="Consolas"/>
        <TextBox HorizontalAlignment="Left" BorderBrush="#FFABADB3" BorderThickness="1" Text="{Binding SelectedPedidoView.NumeroPedido}" Height="33" Margin="120,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" VerticalContentAlignment="Center" FontWeight="Bold" TabIndex="1" FontSize="16" FontFamily="Consolas"/>
        <Label Content="Articulo" Background="{x:Null}" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Height="22" Width="105" Padding="0,0,5,0" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontFamily="Consolas"/>
        <TextBox HorizontalAlignment="Left" BorderBrush="#FFABADB3" BorderThickness="1" Text="{Binding SelectedPedidoView.Articulo}" Height="22" Margin="120,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" VerticalContentAlignment="Center" TabIndex="2" FontFamily="Consolas" FontSize="14"/>
        <Label Content="Modelo" Background="{x:Null}" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" Height="22" Width="105" Padding="0,0,5,0" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontFamily="Consolas"/>
        <ComboBox HorizontalAlignment="Left" ItemsSource="{Binding ModelosList}" SelectedItem="{Binding SelectedPedidoView.NombreModelo, Mode=OneWay}" Margin="120,104,0,0" VerticalAlignment="Top" Width="145" VerticalContentAlignment="Center" Padding="6,3,5,3" TabIndex="3" FontFamily="Consolas" Height="22" FontSize="14"/>
        <Label Content="Producto" Background="{x:Null}" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Height="22" Width="105" Padding="0,0,5,0" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontFamily="Consolas"/>
        <ComboBox HorizontalAlignment="Left" ItemsSource="{Binding ProductosList}" SelectedItem="{Binding SelectedPedidoView.NombreProducto, Mode=OneWay}" Margin="120,130,0,0" VerticalAlignment="Top" Width="145" VerticalContentAlignment="Center" Padding="6,3,5,3" TabIndex="4" FontFamily="Consolas" Height="22" FontSize="14"/>
        <Label Content="Cantidad" Background="{x:Null}" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Height="21" Width="105" Padding="0,0,5,0" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontFamily="Consolas"/>
        <TextBox HorizontalAlignment="Left" BorderBrush="#FFABADB3" BorderThickness="1" Text="{Binding SelectedPedidoView.CantidadEquipos}" Height="22" Margin="120,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" VerticalContentAlignment="Center" TabIndex="5" FontFamily="Consolas" FontSize="14"/>
        <Label Content="Anterior" Background="{x:Null}" HorizontalAlignment="Left" Margin="10,182,0,0" VerticalAlignment="Top" Height="22" Padding="0,0,5,0" HorizontalContentAlignment="Right" Width="105" VerticalContentAlignment="Center" FontFamily="Consolas"/>
        <TextBox HorizontalAlignment="Left" BorderBrush="#FFABADB3" BorderThickness="1" Text="{Binding SelectedPedidoView.NumeroReproceso}" Height="22" Margin="120,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" VerticalContentAlignment="Center" TabIndex="6" FontFamily="Consolas" FontSize="14"/>
        <Label Content="Estado" Background="{x:Null}" HorizontalAlignment="Left" Margin="10,208,0,0" VerticalAlignment="Top" Height="22" Width="105" Padding="0,0,5,0" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontFamily="Consolas"/>
        <ComboBox HorizontalAlignment="Left" ItemsSource="{Binding EstadosList}" SelectedItem="{Binding SelectedPedidoView.EstadoPedido, Mode=OneWay}" Margin="120,208,0,0" VerticalAlignment="Top" Width="145" VerticalContentAlignment="Center" Padding="6,3,5,3" TabIndex="7" FontFamily="Consolas" Height="22" FontSize="14"/>
        <TextBox Name="TextBoxComment" HorizontalAlignment="Left" BorderBrush="#FFABADB3" BorderThickness="1" Height="72" Margin="10,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" MaxLength="120" MaxLines="2" TabIndex="10" FontFamily="Consolas"/>
        <!---->
        <DataGrid BorderBrush="#FFA9D1F4" BorderThickness="3" HorizontalGridLinesBrush="#FFA9D1F4" x:Name="DataGridPedidos" RowHeaderWidth="0" MinRowHeight="26" GridLinesVisibility="Horizontal" AlternationCount="2" ColumnHeaderHeight="30" ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" CellStyle="{StaticResource DataGridContentCellCentering}" RowStyle="{StaticResource RowStyleWithAlternation}" SelectedIndex="{Binding DataGridSelectedIndex}" SelectionChanged="DataGridPedidos_SelectionChanged" ItemsSource="{Binding PedidosViewList}" SelectedItem="{Binding SelectedPedidoView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" EnableColumnVirtualization="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" Margin="270,43,10,10" ColumnWidth="*" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" EnableRowVirtualization="True" FontFamily="Consolas" FontWeight="Bold" FontSize="14" Foreground="Black" Background="#FFF0F0F0">


            <DataGrid.Columns>
                <DataGridTextColumn Header="Pedido" Binding="{Binding NumeroPedido}" MaxWidth="110"  />
                <DataGridTextColumn Header="Modelo" Binding="{Binding NombreModelo}"/>
                <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}"/>
                <DataGridTextColumn Header="Articulo" Binding="{Binding Articulo}"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding CantidadEquipos}"/>
                <DataGridTextColumn Header="Ingreso a Sistema" Binding="{Binding FechaIngreso}" MinWidth="196"/>
                <DataGridTextColumn Header="Estado Actual" Binding="{Binding EstadoPedido}"/>
                <DataGridTextColumn Header="Fecha Estado" Binding="{Binding FechaEstado}" MinWidth="196"/>
                <DataGridTemplateColumn Header="Sucesor" MaxWidth="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock><Hyperlink Style="{StaticResource FieldHyperlink}" Command="{Binding SelectReprocesoCommand, Source={StaticResource ViewModel}}" CommandParameter="{Binding NumeroReproceso}"><InlineUIContainer>
                                        <TextBlock Text="{Binding NumeroReproceso}" />
                                    </InlineUIContainer></Hyperlink></TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Anterior" MaxWidth="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock><Hyperlink Style="{StaticResource FieldHyperlink}" Command="{Binding SelectOriginalCommand, Source={StaticResource ViewModel}}" CommandParameter="{Binding NumeroOriginal}"><InlineUIContainer>
                                        <TextBlock Text="{Binding NumeroOriginal}"/>
                                    </InlineUIContainer></Hyperlink></TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!---->
        <Button Content="GUARDAR" HorizontalAlignment="Left" Margin="10,340,0,0" Width="255" Height="22" VerticalAlignment="Top" TabIndex="11" FontFamily="Consolas"/>
        <Button Content="NUEVO" Command="{Binding CancelBusyIndicatorCommand}" HorizontalAlignment="Left" Margin="10,367,0,0" Width="255" Height="22" VerticalAlignment="Top" TabIndex="11" FontFamily="Consolas"/>
        <Menu Height="28" Background="{x:Null}" VerticalAlignment="Top" Margin="10,10,10,0" BorderThickness="1" BorderBrush="#FFF0F0F0">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Pedido" FontFamily="Consolas" >
                <MenuItem Header="Buscar" />
                <MenuItem Header="Ver Movimientos" />
                <MenuItem Header="Generar Recibo" />
            </MenuItem>
            <MenuItem Header="Lista" FontFamily="Consolas" >
                <MenuItem Header="Todos" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked" />
                <MenuItem Header="Despachado" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked" />
                <MenuItem Header="Cancelado" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <MenuItem Header="Ingresado" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <MenuItem Header="Pausado" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <MenuItem Header="Produccion" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <MenuItem Header="Incompleto" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <MenuItem Header="Autorizado" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <MenuItem Header="Controlado" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <MenuItem Header="Reprocesado" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoEstados" Click="MenuItemClicked"  />
                <Separator/>
                <MenuItem Header="Actualizar" />
            </MenuItem>
            <MenuItem Header="Display" FontFamily="Consolas">
                <MenuItem Header="Activar" IsCheckable="True" />
                <Separator/>
                <MenuItem Header="Pantalla 0" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoPantallas" Click="MenuItemClicked" />
                <MenuItem Header="Pantalla 1" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoPantallas" Click="MenuItemClicked"  />
                <MenuItem Header="Pantalla 2" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoPantallas" Click="MenuItemClicked"  />
                <MenuItem Header="Pantalla 3" IsCheckable="True" helpers:MenuItemExtensions.GroupName="grupoPantallas" Click="MenuItemClicked"  />
                <Separator/>
                <MenuItem Header="Actualizar" />
            </MenuItem>
            <MenuItem Header="{Binding ActiveUser}" FontFamily="Consolas"  HorizontalAlignment="Right">
                <MenuItem Header="Cambiar Contraseña" />
                <MenuItem Header="Cerrar Sesion" />
            </MenuItem>
        </Menu>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="24" Margin="10,234,0,0" VerticalAlignment="Top" Width="255" BorderBrush="#FFABADB3">
            <CheckBox Name="CheckBoxAddComment" Content="Agregar comentario" IsEnabledChanged="CheckBox_IsEnabledChanged" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" TabIndex="9" FontFamily="Consolas" Width="245" Padding="5,0,0,0"/>
        </Border>


    </Grid>
</Window>
